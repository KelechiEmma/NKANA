@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}



<div class="aurel_main_wrapper">
    <div class="aurel_container">
        <div class="aurel_content_wrapper row aurel_right_sidebar">

            <!-- Content Container -->
            <div class="aurel_content col9">
                <div class="aurel_tiny">
                    <!-- Title -->
                    <h1 class="page-title">@ViewData["Title"]</h1>
                    <h4>Reset your password.</h4>


                    <form id="account" method="post" class="aurel_sm_mb_25">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Input.Code" type="hidden" />
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" form="account" size="40" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" form="account" size="40" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" form="account" size="40" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div><input type="submit" value="Reset"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
