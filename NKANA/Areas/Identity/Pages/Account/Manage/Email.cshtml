@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}



<div class="aurel_main_wrapper">
    <div class="aurel_container">
        <div class="aurel_content_wrapper row aurel_right_sidebar">

            <!-- Content Container -->
            <div class="aurel_content col9">
                <div class="aurel_tiny">
                    <!-- Title -->
                    <h1 class="page-title">@ViewData["Title"]</h1>

                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                    @*<div class="row">
                        <div class="col-md-6">*@
                    <form id="email-form" method="post" class="aurel_sm_mb_25">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            @if (Model.IsEmailConfirmed)
                            {
                                <div class="input-group">
                                    <input asp-for="Email" class="form-control" disabled placeholder="Email" form="email-form" size="40" />
                                    <div class="input-group-append">
                                        <span class="input-group-text text-success font-weight-bold">✓</span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <input asp-for="Email" class="form-control" disabled placeholder="Email" form="email-form" size="40" />
                                <div> <input id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" value="Send verification email"> </div>
                            }
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.NewEmail"></label>
                            <input asp-for="Input.NewEmail" class="form-control" placeholder="Email" form="email-form" size="40" />
                            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                        </div>
                        <div> <input id="change-email-button" type="submit" asp-page-handler="ChangeEmail" value="Change email"> </div>
                    </form>
                </div>
            </div>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
        </div>
    </div>
</div> 