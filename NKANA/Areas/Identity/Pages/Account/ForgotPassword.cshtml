@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="aurel_main_wrapper">
    <div class="aurel_container">
        <div class="aurel_content_wrapper row aurel_right_sidebar">
            <!-- Content Container -->
            <div class="aurel_content col9">
                <div class="aurel_tiny">
                    <!-- Title -->
                    <h1 class="page-title">@ViewData["Title"]</h1>

                    <h4>Enter your Email.</h4>
                    <hr />
                    @*<div class="row">
                        <div class="col-md-4">*@
                <form id="forgot-password" method="post" class="aurel_sm_mb_25">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Email " form="forgot-password" size="40" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div><input type="submit" value="Submit"></div>
                    
                </form>
                        </div>
                    </div>

                    @section Scripts {
                        <partial name="_ValidationScriptsPartial" />
                    }

                </div>
            </div>
        </div>
    </div>
</div>