@model NKANA.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<section class="section">
    <div class="section-header">
        <h1>Categories</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item"><a href="#">Categories</a></div>
            <div class="breadcrumb-item">Edit</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row justify-content-center">
            <div class="col-12 col-md-12 col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4>Edit Category</h4>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="text-danger" asp-validation-summary="All"> </div>
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="checkbox" asp-for="ShowInNavbar">
                                    <label class="form-check-label" asp-for="ShowInNavbar">Show in navbar</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ThumnailImage">File</label>
                                <input type="file" asp-for="ThumnailImage" class="form-control">
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <button class="btn btn-primary mr-1" type="submit">Update</button>
                            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
