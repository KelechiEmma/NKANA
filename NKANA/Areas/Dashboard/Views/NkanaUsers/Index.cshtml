@model IEnumerable<NKANA.Models.NkanaUser>

@{
    ViewData["Title"] = "Users";
}

<section class="section">
    <div class="section-header">
        <h1>Users</h1>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4>Users</h4>
                    <div class="card-header-action">
                        <a asp-action="Create" class="btn btn-primary">Add New</a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th> @Html.DisplayNameFor(model => model.UserName)</th>
                                    <th> @Html.DisplayNameFor(model => model.FirstName)</th>
                                    <th> @Html.DisplayNameFor(model => model.Email)</th>
                                    <th> @Html.DisplayNameFor(model => model.EmailConfirmed)</th>
                                    <th> @Html.DisplayNameFor(model => model.PhoneNumber)</th>
                                    <th> @Html.DisplayNameFor(model => model.AccessFailedCount)</th>
                                    <th> @Html.DisplayNameFor(model => model.LockoutEnabled)</th>
                                    <th> @Html.DisplayNameFor(model => model.LockoutEnd)</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                            <div class="table-links">
                                                <div class="bullet"></div>
                                                <a asp-action="Details" asp-route-id="@item.Id">View</a>
                                            </div>
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>
                                            @if (item.EmailConfirmed)
                                            {
                                                <span class="badge badge-pill badge-success mb-1 float-right">Confirmied</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-pill badge-danger mb-1 float-right">NIL</span>
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                        <td>
                                            <span class="badge badge-pill badge-warning mb-1 float-right">@Html.DisplayFor(modelItem => item.AccessFailedCount)</span>
                                        </td>
                                        <td>
                                            @if (item.LockoutEnabled)
                                            {
                                                <span class="badge badge-pill badge-success mb-1 float-right">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-pill badge-danger mb-1 float-right">Locked</span>
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.LockoutEnd)</td>
                                        <td>
                                            <a class="btn btn-primary btn-action mr-1" data-toggle="tooltip" asp-action="Edit" asp-route-id="@item.Id" title="Edit"><i class="fas fa-pencil-alt"></i></a>
                                            <a class="btn btn-danger btn-action" data-toggle="tooltip" asp-action="Delete" asp-route-id="@item.Id" title="Delete" data-confirm="Are You Sure?|This action can not be undone. Do you want to continue?" data-confirm-yes="deleteItem(@item.Id)"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


